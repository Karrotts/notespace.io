@model Notespace.Web.Models.ViewModels.LoginModel
<div class="notespace_gradient login_background">
    <div class="circle top_left notespace_gradient"></div>
    <div class="circle bottom_right notespace_gradient"></div>
    <div class="login">
        <div class="main_container">
            <div class="inner_container">
                <img class="header_logo" src="/imgs/logo_color.svg">
                <h1 class="title">Login</h1>
                <p style="margin-top: 15px; margin-bottom: 5px;">Don't have an account? <a asp-controller="account" asp-action="register">Sign Up</a></p>
                <form asp-action="Login" asp-controller="Account" method="post">
                    <label id="error" class="error_text"></label><br>
                    <label asp-for="Name">Username</label><br>
                    <input asp-for="Name" type="text" placeholder="username" required><br>
                    <label asp-for="Password">Password</label><br>
                    <input asp-for="Password" type="password" placeholder="*********" required><br>
                    <button type="submit">LOGIN</button>
                </form>
            </div>
            <div class="logo">
                <img src="/imgs/laptop.svg" alt="Laptop with notespace login">
            </div>
        </div>
    </div>
</div>