@model IEnumerable<Notespace.Web.Models.Notebook>
@{
    string[] color = { "icon-red", "icon-yellow", "icon-green", "icon-blue" };
}
@{
    ViewData["Title"] = "Index";
}
<div id="new_note" class="new_note_menu hide">
    <div class="menu_background">
        <div class="menu_exit_container" onclick="NoteMenuToggle()">
            <i class="fas fa-times"></i>
        </div>
        <h1 class="display-6 menu_header">New Notebook</h1>
        <form asp-action="Create">
            <label class="menu_lable">Notebook Name</label>
            <input name="name" class="menu_input" type="text"><br>
            <input name="public" class="menu_checkbox" type="checkbox">  <label>Public </label>
            <label class="menu_lable" style="margin-top: 10px;">Notebook Color</label>
            <label class="container">
                <input type="radio" checked="checked" name="color" value="1">
                <span class="checkmark checkmark-red"></span>
            </label>
            <label class="container">
                <input type="radio" name="color" value="2">
                <span class="checkmark checkmark-yellow"></span>
            </label>
            <label class="container">
                <input type="radio" name="color" value="3">
                <span class="checkmark checkmark-green"></span>
            </label>
            <label class="container">
                <input type="radio" name="color" value="4">
                <span class="checkmark checkmark-blue"></span>
            </label>
            <button class="menu_submit" type="submit">Submit</button>
        </form>
    </div>
</div>
<div class="d-flex flex-row flex-wrap">
    <h2 class="display-6">Your Notebooks</h2>
    <a onclick="NoteMenuToggle()" class="p-3" style="margin-left: auto; cursor: pointer;"><i class="far fa-plus-square"></i> CREATE</a>
</div>
<div class="d-flex flex-column notes">
    @foreach (var item in Model)
    {
        <a asp-action="Details" asp-route-id="@item.NotebookID" asp-route-pageId="0" class="d-flex p-3 note_button">
            <div style="white-space: normal;"><i class="fas fa-book @color[item.Color - 1]"></i> @item.Title</div>
            <span style="margin-left: auto;">Last Modified: @item.LastModified</span>
        </a>
    }
</div>