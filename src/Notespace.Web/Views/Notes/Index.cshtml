@model IEnumerable<Notespace.Web.Models.Note>
@{
    ViewData["Title"] = "Notes";
}
<div class="d-flex flex-row flex-wrap">
    <h2 class="display-6">Your Notes</h2>
    <a asp-action="Create" class="p-3" style="margin-left: auto;"><i class="far fa-plus-square"></i> CREATE</a>
</div>
<div class="d-flex flex-column notes">
    @foreach (var item in Model)
    {
        <a asp-action="Details" asp-route-id="@item.NoteID" class="d-flex p-3 note_button">
            <span><i class="far fa-sticky-note"></i> @item.Title</span>
            <span style="margin-left: auto;">Last Modified: @item.LastModified</span>
        </a>
    }
</div>